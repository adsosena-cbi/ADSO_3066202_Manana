Algoritmo Valor_S
	Definir n,s Como Real
	Escribir 'Digite un valor'
	Leer n
	ser <- 1
	Para i<-1 Hasta n Con Paso 2 Hacer
		Si ser MOD 3=0 Entonces
			a <- -(i)
			Escribir a
		SiNo
			Escribir i
		FinSi
		ser <- ser+1
	FinPara
	s <- 0
	Para i<-1 Hasta n Hacer
		Si i MOD 3=0 Entonces
			s <- s-(i*2-1)
		SiNo
			s <- s+(i*2-1)
		FinSi
	FinPara
	Escribir 'El valor de S es: ',s
FinAlgoritmo
